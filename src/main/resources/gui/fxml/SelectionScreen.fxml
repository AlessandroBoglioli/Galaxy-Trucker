<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<AnchorPane fx:id="SelectionScreenAnchorPane" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" >

    <HBox alignment="CENTER" spacing="20"  AnchorPane.leftAnchor="600.0" AnchorPane.rightAnchor="600.0" AnchorPane.topAnchor="100.0">
        <ImageView fx:id = "persistentImageView" fitHeight="300.0" fitWidth="450.0">
            <image>
                <Image url="@../images/Title.jpg" />
            </image></ImageView>
    </HBox>

    <VBox alignment="CENTER" spacing="20" AnchorPane.leftAnchor="200" AnchorPane.rightAnchor="200" AnchorPane.topAnchor="550">
      <children>
      
          <HBox alignment="CENTER" spacing="20">
              <Button fx:id="HostButton" text="New Match" />
            <Button fx:id="PlayerButton" layoutX="10.0" layoutY="10.0" text="Login" />
          </HBox>
      </children>
   </VBox>

</AnchorPane>
